<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pitt.cs.cs1631.group4.voteapp.MainActivity"
    android:id="@+id/home_fragment_rootview"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_text"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPoll_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Create a new Poll"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homescree_test_button"
        android:layout_below="@id/newPoll_button"
        android:layout_centerHorizontal="true"
        android:text="Run tests"/>


</RelativeLayout>